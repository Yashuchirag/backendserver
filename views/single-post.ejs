<!DOCTYPE html>
<html lang="en">
<%- include("includes/head") %>
<body>
    <%- include("includes/header") %>
    <main>
        <h1><%= post.title %></h1>
        <p><%= post.content %></p>
        <p>By <%= post.author %></p>

        <article>
            <h2>Comments</h2>
            <ul>
                <% post.comments.forEach(function(comment) { %>
                    <li><%= comment %></li>
                <% }) %>
            </ul>
        </article>
    </main>

    <%- include("includes/footer") %>
</body>
</html>